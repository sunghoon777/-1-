<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:background="@drawable/recycleview_ripple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/detailed_truck_menu_recyclerView_layout_imageview"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detailed_truck_menu_recyclerView_layout_textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/myfont2"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:breakStrategy="high_quality"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/detailed_truck_menu_recyclerView_layout_textview2"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:fontFamily="@font/myfont3"
                android:breakStrategy="high_quality"
                android:paddingRight="20dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/detailed_truck_menu_recyclerView_layout_textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:breakStrategy="high_quality"
                android:paddingRight="20dp"
                android:fontFamily="@font/myfont3"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>