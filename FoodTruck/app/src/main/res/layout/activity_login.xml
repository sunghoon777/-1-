<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".login.LoginActivity">

    <ImageView
        android:id="@+id/login_TruckImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bakery_truck_logo" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        app:lottie_autoPlay="true"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/splash"
        app:lottie_loop="true" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="15dp"
        android:backgroundTint="#d3d3d3"
        android:ems="10"
        android:hint="아이디 입력"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/login_key"
        android:drawablePadding="15dp"
        android:backgroundTint="#d3d3d3"
        android:ems="10"
        android:hint="패스워드 입력"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_ripple"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_ripple"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <Button
        android:id="@+id/findPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인에 문제가 있으신가요?"
        android:textColor="@color/black"
        android:background="@drawable/recycleview_ripple" />
</LinearLayout>