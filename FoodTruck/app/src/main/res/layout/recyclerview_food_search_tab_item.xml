<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_food_search_tab_item_cardView"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_margin="10dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">>
        <ImageView
            android:id="@+id/recyclerview_food_search_tab_item_category_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/fire"
            />
        <TextView
            android:id="@+id/recyclerview_food_search_tab_item_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="인기"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/myfont2">
        </TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>