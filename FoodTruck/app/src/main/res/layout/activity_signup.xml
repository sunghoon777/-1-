<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".login.SignupActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:text="회원정보를 입력해주세요"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signupName"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/user_account"
        android:drawablePadding="15dp"
        android:background="@drawable/signup_textbox"
        android:ems="10"
        android:hint="닉네임"
        android:inputType="textPersonName"
        android:padding="12sp" />

    <EditText
        android:id="@+id/signupEmail"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="15dp"
        android:background="@drawable/signup_textbox"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:padding="12sp" />

    <EditText
        android:id="@+id/signupPassword"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/login_key"
        android:drawablePadding="15dp"
        android:background="@drawable/signup_textbox"
        android:ems="10"
        android:hint="패스워드"
        android:inputType="textPassword"
        android:padding="12sp" />

    <EditText
        android:id="@+id/signupPassword_check"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="15dp"
        android:background="@drawable/signup_textbox"
        android:ems="10"
        android:hint="패스워드 확인"
        android:inputType="textPassword"
        android:padding="12sp" />

    <EditText
        android:id="@+id/signupPhoneNumber"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/ic_baseline_local_phone_24"
        android:drawablePadding="15dp"
        android:background="@drawable/signup_textbox"
        android:ems="10"
        android:hint="전화번호 입력"
        android:maxLength="13"
        android:inputType="phone"
        android:padding="12sp" />

    <Button
        android:id="@+id/signup_commit_button"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_ripple"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>