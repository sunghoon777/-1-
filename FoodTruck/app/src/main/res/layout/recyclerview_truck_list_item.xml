<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:gravity="center_horizontal"
    android:background="@drawable/recyclerview_ripple"
    android:clickable="true"
    android:focusable="true">
    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">
           <ImageView
               android:id="@+id/recyclerview_truck_list_item_truck_image"
               android:layout_width="270dp"
               android:layout_height="170dp"
               android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/recyclerview_truck_list_item_truck_name"
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:fontFamily="@font/myfont3"
                   android:textColor="#000000"
                   android:textSize="18sp"
                   android:textStyle="bold" />
               <TextView
                   android:id="@+id/recyclerview_truck_list_item_wait_time"
                   android:layout_width="70dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:gravity="right"
                   android:fontFamily="@font/myfont3"
                   android:textColor="#000000"
                   android:textSize="12sp"
                   android:textStyle="bold" />
           </LinearLayout>


           <LinearLayout
               android:layout_width="270dp"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="10dp">
               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   app:srcCompat="@drawable/star" />
               <TextView
                   android:id="@+id/recyclerview_truck_list_item_rate"
                   android:layout_width="110dp"
                   android:layout_height="25dp"
                   android:gravity="center_vertical"
                   android:textSize="12sp"
                   android:fontFamily="@font/myfont3"
                   android:textStyle="bold"/>
               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   app:srcCompat="@drawable/fire" />
               <TextView
                   android:id="@+id/recyclerview_truck_list_item_oder_count"
                   android:layout_width="110dp"
                   android:layout_height="25dp"
                   android:gravity="center_vertical"
                   android:textSize="12sp"
                   android:fontFamily="@font/myfont3"
                   android:textStyle="bold"/>
           </LinearLayout>
</LinearLayout>