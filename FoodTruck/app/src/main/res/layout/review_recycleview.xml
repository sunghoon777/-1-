<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:background="@color/white">

        <TextView
            android:id="@+id/review_recycleView_userName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/myfont2"/>
        <TextView
            android:id="@+id/review_recycleView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/myfont2"/>

        <RatingBar
            android:id="@+id/review_recycleView_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity=""
            android:numStars="5"
            android:isIndicator="false"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"/>
        <ImageView
            android:id="@+id/review_recycleView_foodImage"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            />
    <TextView
        android:id="@+id/review_recycleView_userComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/review_recycleView_order_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

</LinearLayout>