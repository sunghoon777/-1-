<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/dialog_review_close_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/icon_close"
            android:padding="10dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="만족도 평가 및 리뷰"
            android:textSize="18sp"
            android:fontFamily="@font/myfont2"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"
            />
        <ImageView
            android:id="@+id/dialog_review_commit_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_baseline_send_24"
            android:padding="10dp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="50dp"
        android:textSize="18sp"
        android:fontFamily="@font/myfont2"
        android:textColor="@color/black"
        android:text="음식 평가"/>

    <TextView
        android:id="@+id/dialog_review_truck_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:textSize="16sp"
        android:fontFamily="@font/myfont3"
        android:textColor="@color/black"
        android:text="셀러디 광교역점"/>

    <RatingBar
        android:id="@+id/dialog_review_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:numStars="5"
        android:isIndicator="false"
        android:stepSize="0.5"
        android:rating="0"
        android:theme="@style/RatingBar"/>

    <EditText
        android:id="@+id/dialog_review_comment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="15sp"
        android:padding="5dp"
        android:hint="다른 고객들이 참고할 수 있도록 음식에 대한 경험을 적어주세요"
        android:gravity="top"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/skyblue"
        android:textSelectHandle="@color/skyblue"
        android:textColorHighlight="@color/skyblue"
        android:background="@drawable/reviewbox"
        android:inputType="text|textMultiLine" />

    <ImageView
        android:id="@+id/dialog_review_camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/ic_baseline_photo_camera_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textSize="14sp"
        android:fontFamily="@font/myfont3"
        android:textColor="@color/black"
        android:text="사진 추가"
        />
    <ImageView
        android:id="@+id/dialog_review_review_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
