<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".search.DetailedTruckMenuActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/detailed_truck_menu_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">
            <ImageView
                android:id="@+id/activity_detailed_truck_menu_truck_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:alpha=".75"/>
            <TextView
                android:id="@+id/activity_detailed_truck_menu_truck_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                android:layout_gravity="center"
                android:fontFamily="@font/myfont2"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="28sp"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/activity_detailed_truck_menu_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="tab"
            app:tabBackground="@drawable/top_tab_bg"
            app:tabGravity="fill"
            app:tabIndicatorColor="#00B2EE"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#00B2EE"
            app:tabTextColor="#BEBEBE" />
    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_detailed_truck_menu_review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#00B2EE"
        android:src="@drawable/ic_baseline_comment_24"
        app:fabSize="normal" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_detailed_truck_menu_order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#00B2EE"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        app:fabSize="normal" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="scroll"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <FrameLayout
            android:id="@+id/activity_detailed_truck_menu_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
