<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/recycleview_ripple"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notice_recycleView_layout_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지"
            android:textColor="#097969"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/myfont2"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/notice_recycleView_layout_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/myfont3"/>
    </LinearLayout>

    <TextView
        android:id="@+id/notice_recycleView_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/myfont3"/>
    <View android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
</LinearLayout>